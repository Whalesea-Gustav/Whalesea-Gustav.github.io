.site-meta {
  margin: 0;
  text-align: $site-meta-text-align;

  +mobile() { text-align: center; }
}

.brand {
  position: relative;
  display: inline-block;
  padding: 0 40px;
  color: #ffffff;
  //background: $brand-bg;
  background: none;
  border-bottom: none;
  &:hover { color: $brand-hover-color; }
  

}

.logo {
  display: inline-block;
  margin-right: 5px;
  line-height: 36px;
  vertical-align: top;
}

.site-title {
  display: inline-block;
  vertical-align: top;
  line-height: 36px;
  font-size: 4em;
  font-weight: normal;
  font-family: "Lobster Two", "Comic Sans MS", "Palatino Linotype", "Book Antiqua", cursive;
}

.site-subtitle {
  margin-top: 10px;S
  font-size: 2em;
  color: $subtitle-color;
}

.use-motion {
  .brand { opacity: 0; }

  .logo, .site-title, .site-subtitle {
    opacity: 0;
    position: relative;
    top: -10px;
  }
}
